{{#partial "content"}}

<h1>Hero list!</h1>

#if ($heroes/new)
<table class="table table-striped">
    <thead class="black white-text">
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Age</th>
        <th scope="col">Power</th>
        <th scope="col">Weakness</th>
    </tr>
    </thead>
    #foreach ($hero in $heroes)
    <tbody>
    <tr>
        <td>$heros.getName()</td>
        <td>$heros.getAge()</td>
        <td>$heros.getPower()</td>
        <td>$heros.getWeakness()</td>
    </tr>
    </tbody>
    #end
</table>
<a href ='/'>Go Back</a>
<a href="/heroes">Add a  Hero</a>
#else
<a href="/heroes/new">Add a new Hero</a>
#end

{{/partial}}

{{> layout.hbs}}

<p>Content:</p>

<p>{{ heros.content }}</p>
<h5>Heros status:</h5>
<p>
    {{#if heroes.published }}
        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
    {{else}}
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
    {{/if}}

    <a href="/posts/{{heros.id}}/update">Edit this post</a><br>
    <a href="/posts/{{heros.id}}/delete">DELETE this post (no undo)</a>
</p>